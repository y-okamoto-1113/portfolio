<%= form_with(model: article, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル"%>
    <%= f.text_field :title, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :body, "記事の本文" %>
    <%= f.text_area :body, {class: "form-control", rows: 10} %>
  </div>

  <%= f.submit class:"btn btn-outline-primary float-right" %>
<%end%>